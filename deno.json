    "@scope/": "./packages/",
    "@oak/oak": "jsr:@oak/oak@^16.1.0",
    "@std/assert": "jsr:@std/assert@1",
    "preact": "https://esm.sh/preact@10.x",
    "preact/": "https://esm.sh/preact@10.x/"
  },
  "workspace": [
    "./apps/zemili/clients/web",
    "./apps/zemili/services/backend",
